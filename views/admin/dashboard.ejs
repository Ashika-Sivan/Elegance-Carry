<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Elegance Carry - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="#">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        .dashboard-container {
            margin-left: 250px;
            padding: 20px;
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            min-height: 100vh;
            transition: margin-left 0.3s ease;
        }

        .filter-section, .chart-section, .overview-section, .best-selling-products, .best-selling-categories, .best-selling-brands {
            margin-bottom: 30px;
        }

        .filter-section form {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            align-items: center;
        }

        .filter-section select, .filter-section input {
            padding: 5px;
            font-size: 14px;
        }

        .date-range {
            margin-top: 10px;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .chart-section {
            max-width: 800px;
            margin: 0 auto;
        }

        .overview-stats {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
        }

        .stat-box {
            flex: 1 1 200px;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
            min-width: 150px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            font-size: 14px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .logout-btn {
            text-decoration: none;
            padding: 8px 16px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover {
            background-color: #0056b3;
        }

        /* Date validation styles */
        .date-error {
            border: 2px solid #dc3545 !important;
            background-color: #fff5f5;
        }

        .error-message {
            color: #dc3545;
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }

        .error-message.show {
            display: block;
        }

        .date-input-group {
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .date-range-container {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            align-items: flex-start;
        }

        /* Responsive Styles */
        @media (max-width: 1024px) {
            .dashboard-container {
                margin-left: 0;
            }

            .chart-section {
                max-width: 100%;
                padding: 0 10px;
            }

            .filter-section form {
                flex-direction: column;
                align-items: flex-start;
            }

            .date-range {
                flex-direction: column;
            }
        }

        @media (max-width: 768px) {
            .filter-section h2 {
                font-size: 20px;
            }

            .chart-section h3, .overview-section h3, .best-selling-products h3, .best-selling-categories h3, .best-selling-brands h3 {
                font-size: 18px;
            }

            .stat-box {
                flex: 1 1 100%;
                margin: 5px;
                padding: 8px;
            }

            table {
                font-size: 12px;
            }

            th, td {
                padding: 6px;
            }

            .logout-btn {
                padding: 6px 12px;
                font-size: 14px;
            }

            .date-range-container {
                flex-direction: column;
                gap: 10px;
            }
        }

        @media (max-width: 480px) {
            .filter-section h2 {
                font-size: 18px;
            }

            .chart-section h3, .overview-section h3, .best-selling-products h3, .best-selling-categories h3, .best-selling-brands h3 {
                font-size: 16px;
            }

            .filter-section select, .filter-section input {
                width: 100%;
                font-size: 12px;
            }

            .date-range {
                gap: 5px;
            }

            .stat-box {
                padding: 6px;
                font-size: 12px;
            }

            table {
                display: block;
                overflow-x: auto;
                white-space: nowrap;
            }

            th, td {
                padding: 4px;
                font-size: 10px;
            }

            .logout-btn {
                padding: 5px 10px;
                font-size: 12px;
            }

            .best-selling-products img {
                width: 40px;
                height: 40px;
            }
        }
    </style>
</head>
<body>
    <!-- Include header.ejs -->
    <%- include('../../views/layouts/admin/header', { currentPage: 'dashboard' }) %>

    <div class="dashboard-container">
        <!-- Filter Section -->
        <div class="filter-section">
            <h2>Admin Dashboard - Analytics</h2>
            <form method="GET" action="/admin/dashboard" id="dashboardForm">
                <label for="filterValue">Filter By:</label>
                <select name="filterValue" id="filterValue">
                    <option value="all" <%= selectedFilter === 'all' ? 'selected' : '' %>>All Time</option>
                    <option value="daily" <%= selectedFilter === 'daily' ? 'selected' : '' %>>Daily</option>
                    <option value="weekly" <%= selectedFilter === 'weekly' ? 'selected' : '' %>>Weekly</option>
                    <option value="monthly" <%= selectedFilter === 'monthly' ? 'selected' : '' %>>Monthly</option>
                    <option value="yearly" <%= selectedFilter === 'yearly' ? 'selected' : '' %>>Yearly</option>
                    <option value="custom" <%= selectedFilter === 'custom' ? 'selected' : '' %>>Custom</option>
                </select>

                <!-- Custom Date Range -->
                <div class="date-range" id="dateRange" style="display: <%= selectedFilter === 'custom' ? 'block' : 'none' %>">
                    <div class="date-range-container">
                        <div class="date-input-group">
                            <label for="startDate">Start Date:</label>
                            <input type="date" name="startDate" id="startDate" value="<%= startDate %>">
                            <div class="error-message" id="startDateError">Please select a valid start date</div>
                        </div>
                        <div class="date-input-group">
                            <label for="endDate">End Date:</label>
                            <input type="date" name="endDate" id="endDate" value="<%= endDate %>">
                            <div class="error-message" id="endDateError">Please select a valid end date</div>
                        </div>
                    </div>
                    <div class="error-message" id="dateRangeError">End date must be after start date</div>
                    <div class="error-message" id="futureDateError">Dates cannot be in the future</div>
                    <button type="submit" class="btn btn-primary mt-2" style="display: none;" id="applyDatesBtn">Apply Dates</button>
                </div>
            </form>
        </div>

        <!-- Chart Section -->
        <div class="chart-section">
            <h3>Revenue Trend</h3>
            <canvas id="revenueChart" width="400" height="200"></canvas>
        </div>

        <!-- Overview Section -->
        <div class="overview-section">
            <h3>Overview</h3>
            <div class="overview-stats">
                <div class="stat-box">
                    <h4>Total Revenue</h4>
                    <p>â‚¹<%= parseInt(totalRevenue) %></p>
                </div>
                <div class="stat-box">
                    <h4>Total Orders</h4>
                    <p><%= totalOrders %></p>
                </div>
                <div class="stat-box">
                    <h4>New Customers</h4>
                    <p><%= totalCustomers %></p>
                </div>
            </div>
        </div>

        <!-- Best Selling Products Section -->
        <div class="best-selling-products">
            <h3>Best Selling Products (Top 10)</h3>
            <table>
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Image</th>
                        <th>Total Quantity</th>
                        <th>Total Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (topProducts.length > 0) { %>
                        <% topProducts.forEach(product => { %>
                            <tr>
                                <td><%= product.productName %></td>
                                <td>
                                    <% if (product.productImage && product.productImage.length > 0) { %>
                                        <img src="/img/<%= product.productImage[0] %>" alt="<%= product.productName %>" width="50" height="50">
                                    <% } else { %>
                                        <span>No Image</span>
                                    <% } %>
                                </td>
                                <td><%= product.totalQuantity %></td>
                                <td>â‚¹<%= parseInt(product.totalRevenue) %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4">No data available</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Best Selling Categories Section -->
        <div class="best-selling-categories">
            <h3>Best Selling Categories (Top 10)</h3>
            <table>
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Total Orders</th>
                        <th>Total Quantity Sold</th>
                        <th>Total Revenue</th>
                        <th>Average Order Value</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (topCategories.length > 0) { %>
                        <% topCategories.forEach(category => { %>
                            <tr>
                                <td><%= category.categoryName %></td>
                                <td><%= category.totalOrders %></td>
                                <td><%= category.totalQuantitySold %></td>
                                <td>â‚¹<%= category.totalRevenue %></td>
                                <td>â‚¹<%= category.averageOrderValue %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5">No data available</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Best Selling Brands Section -->
        <div class="best-selling-brands">
            <h3>Best Selling Brands (Top 10)</h3>
            <table>
                <thead>
                    <tr>
                        <th>Brand Name</th>
                        <th>Total Sales</th>
                        <th>Total Quantity</th>
                        <th>Average Order Value</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (topBrand.length > 0) { %>
                        <% topBrand.forEach(brand => { %>
                            <tr>
                                <td><%= brand.brandName %></td>
                                <td>â‚¹<%= parseInt(brand.totalSales) %></td>
                                <td><%= brand.totalQuantity %></td>
                                <td>â‚¹<%= parseInt(brand.averageOrderValue) %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4">No data available</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Get current date for validation
        const today = new Date().toISOString().split('T')[0];
        
        // Set max date for both inputs to today
        document.getElementById('startDate').setAttribute('max', today);
        document.getElementById('endDate').setAttribute('max', today);

        // Show/hide date range inputs based on filter selection
        document.getElementById('filterValue').addEventListener('change', function() {
            const dateRange = document.getElementById('dateRange');
            const applyBtn = document.getElementById('applyDatesBtn');
            
            if (this.value === 'custom') {
                dateRange.style.display = 'block';
                applyBtn.style.display = 'inline-block';
            } else {
                dateRange.style.display = 'none';
                applyBtn.style.display = 'none';
              
                clearValidationErrors();
               
                document.getElementById('dashboardForm').submit();
            }
        });

     
        function validateDates() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            
            let isValid = true;
      
            clearValidationErrors();
      
            if (!startDate) {
                showError('startDateError', 'Please select a start date');
                startDateInput.classList.add('date-error');
                isValid = false;
            }
            
            if (!endDate) {
                showError('endDateError', 'Please select an end date');
                endDateInput.classList.add('date-error');
                isValid = false;
            }
           
            if (startDate && endDate) {
                const start = new Date(startDate);
                const end = new Date(endDate);
                const todayDate = new Date(today);
                
         
                if (start > todayDate) {
                    showError('futureDateError', 'Start date cannot be in the future');
                    startDateInput.classList.add('date-error');
                    isValid = false;
                }
                
                if (end > todayDate) {
                    showError('futureDateError', 'End date cannot be in the future');
                    endDateInput.classList.add('date-error');
                    isValid = false;
                }
                
            
                if (start >= end) {
                    showError('dateRangeError', 'End date must be after start date');
                    startDateInput.classList.add('date-error');
                    endDateInput.classList.add('date-error');
                    isValid = false;
                }
                
              
                const daysDifference = (end - start) / (1000 * 60 * 60 * 24);
                if (daysDifference > 365) {
                    showError('dateRangeError', 'Date range cannot exceed 365 days');
                    startDateInput.classList.add('date-error');
                    endDateInput.classList.add('date-error');
                    isValid = false;
                }
            }
            
            return isValid;
        }

        // Show error message
        function showError(errorId, message) {
            const errorElement = document.getElementById(errorId);
            errorElement.textContent = message;
            errorElement.classList.add('show');
        }

        // Clear all validation errors
        function clearValidationErrors() {
            const errorMessages = document.querySelectorAll('.error-message');
            const dateInputs = document.querySelectorAll('input[type="date"]');
            
            errorMessages.forEach(error => {
                error.classList.remove('show');
                error.textContent = '';
            });
            
            dateInputs.forEach(input => {
                input.classList.remove('date-error');
            });
        }

        // Add event listeners for real-time validation
        document.getElementById('startDate').addEventListener('change', validateDates);
        document.getElementById('endDate').addEventListener('change', validateDates);

        // Form submission validation
        document.getElementById('dashboardForm').addEventListener('submit', function(e) {
            const filterValue = document.getElementById('filterValue').value;
            
            if (filterValue === 'custom') {
                if (!validateDates()) {
                    e.preventDefault(); // Prevent form submission if validation fails
                    return false;
                }
            }
        });

        // Fetch chart data dynamically
        const chartData = {
            labels: <%- JSON.stringify(chartLabels) %>,
            data: <%- JSON.stringify(chartData) %>
        };

        // Render Chart.js Line Chart for Revenue Trend
        const ctx = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: chartData.labels,
                datasets: [{
                    label: 'Revenue ($)',
                    data: chartData.data,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Revenue ($)'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Time Period'
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>