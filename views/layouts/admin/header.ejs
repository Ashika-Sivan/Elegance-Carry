    color: #212529;
    border-bottom: 1px solid #dee2e6;
    margin-left: 250px;
}

        .main-header .nav img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }
        .main-header .dropdown-menu {
            background-color: #343a40;
            color: #fff;
            border: none;
        }
        .main-header .dropdown-menu .dropdown-item:hover {
            background-color: #495057;
        }
        .dashboard-content {
            margin-top: 20px;
        }
        .dashboard-content h1 {
            font-size: 28px;
            color: #343a40;
            margin-bottom: 20px;
        }
       
