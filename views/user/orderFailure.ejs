    <title>Payment Failed</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            text-align: center;
        }
        .error-animation {
            width: 80px;
            height: 80px;
            margin: 0 auto 20px;
            position: relative;
        }
        .circle {
            width: 80px;
            height: 80px;
            background-color: #ff3f6c;
            border-radius: 50%;
            position: absolute;
            top: 0;
            left: 0;
            animation: fadeIn 0.5s ease-in-out;
        }
        .cross {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 40px;
            height: 40px;
            transform: translate(-50%, -50%) rotate(45deg);
        }
        .cross::before, .cross::after {
            content: '';
            position: absolute;
            background-color: white;
            border-radius: 5px;
        }
        .cross::before {
            width: 10px;
            height: 40px;
            left: 50%;
            transform: translateX(-50%);
        }
        .cross::after {
            width: 40px;
            height: 10px;
            top: 50%;
            transform: translateY(-50%);
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: scale(0.5); }
            to { opacity: 1; transform: scale(1); }
        }
        h2 {
            color: #333;
        }
        .order-id {
            font-size: 18px;
            font-weight: bold;
            color: #ff3f6c;
            margin: 10px 0;
        }
        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
            transition: background 0.3s ease;
            text-decoration: none;
            text-align: center;
        }
        .btn-shop {
            background: #28a745;
            color: white;
        }
        .btn-shop:hover {
            background: #218838;
        }
        .btn-order {
            background: #007bff;
            color: white;
        }
        .btn-order:hover {
            background: #0056b3;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="error-animation">
            <div class="circle"></div>
            <div class="cross"></div>
        </div>
        <h2>Payment Failed</h2>
