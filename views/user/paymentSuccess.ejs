<%- include("../layouts/user/header.ejs") %>

<div class="payment-status-container">
    <div class="payment-status success">
        <div class="status-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1>Payment Successful!</h1>
        <p>Your order has been placed successfully.</p>
        
        <% if (orderDetails) { %>
            <div class="order-summary">
                <h2>Order Summary</h2>
                <div class="order-details">
                    <p><strong>Order ID:</strong> <%= orderDetails._id %></p>
                    <p><strong>Date:</strong> <%= new Date(orderDetails.createdAt).toLocaleDateString() %></p>
                    <p><strong>Payment Method:</strong> <%= orderDetails.paymentMethod %></p>
                    <p><strong>Amount Paid:</strong> â‚¹<%= orderDetails.finalAmount %></p>
                </div>
            </div>
        <% } %>
        
        <div class="action-buttons">
            <a href="/orderList" class="action-btn primary">View My Orders</a>
            <a href="/" class="action-btn secondary">Continue Shopping</a>
        </div>
    </div>
</div>

<style>
    .payment-status-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
    }
    
    .payment-status {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 40px;
        text-align: center;
        max-width: 600px;
        width: 100%;
    }
    
    .status-icon {
        font-size: 80px;
        margin-bottom: 20px;
    }
    
    .success .status-icon {
        color: #2ecc71;
    }
    
    .payment-status h1 {
        margin-bottom: 15px;
        color: #333;
    }
    
    .payment-status p {
        font-size: 18px;
        color: #666;
        margin-bottom: 30px;
    }
    
    .order-summary {
        text-align: left;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
    }
    
    .order-summary h2 {
        margin-bottom: 15px;
        color: #333;
        font-size: 20px;
    }
    
    .order-details p {
        margin: 8px 0;
        font-size: 16px;
    }
    
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
    }
    
    .action-btn {
        display: inline-block;
        padding: 12px 25px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease;
    }
    
    .primary {
        background-color: #ff3f6c;
        color: white;
    }
    
    .primary:hover {
        background-color: #e62e5c;
    }
    
    .secondary {
        background-color: #f5f5f6;
        color: #333;
        border: 1px solid #ddd;
    }
    
    .secondary:hover {
        background-color: #eaeaec;
    }
    
    @media (max-width: 768px) {
        .action-buttons {
            flex-direction: column;
        }
        
        .action-btn {
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>

<%- include("../layouts/user/footer.ejs") %>