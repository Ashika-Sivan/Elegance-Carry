<%- include("../layouts/user/header.ejs") %>

<style>
    .container {
        display: flex;
        max-width: 1200px;
        margin: 20px auto;
        gap: 20px;
        padding: 0 15px;
    }

    .profile-container {
        flex: 1;
        padding: 20px;
        font-family: 'Assistant', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .profile-box {
        background-color: #fff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        max-width: 800px;
        margin: auto;
        transition: all 0.3s ease;
    }

    h1 {
        text-align: left;
        margin-bottom: 30px;
        color: #282c3f;
        font-size: 1.8rem;
        font-weight: 600;
        border-bottom: 1px solid #eaeaec;
        padding-bottom: 15px;
        position: relative;
    }

    h1::after {
        content: '';
        width: 50px;
        height: 3px;
        background: #ff3f6c;
        position: absolute;
        bottom: -1px;
        left: 0;
        border-radius: 2px;
    }

    .input-group {
        text-align: left;
        margin-bottom: 20px;
        position: relative;
    }

    label {
        font-weight: 600;
        color: #7e818c;
        font-size: 14px;
        display: block;
        margin-bottom: 5px;
    }

    input {
        width: 100%;
        padding: 12px;
        border: 1px solid #d4d5d9;
        border-radius: 4px;
        font-size: 14px;
        background: #f5f5f6;
        padding-right: 40px;
        box-sizing: border-box;
    }

    input:focus {
        border-color: #ff3f6c;
        outline: none;
    }

    .password-toggle {
        position: absolute;
        right: 10px;
        top: 35px;
        cursor: pointer;
        color: #7e818c;
    }

    .btn {
        width: 100%;
        padding: 12px;
        border: none;
        font-size: 14px;
        font-weight: 600;
        border-radius: 4px;
        cursor: pointer;
        text-transform: uppercase;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #ff3f6c;
        color: white;
    }

    .btn-primary:hover {
        opacity: 0.8;
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .container {
            flex-direction: column;
        }

        .profile-container {
            padding: 15px;
        }

        .profile-box {
            padding: 25px;
        }
    }

    @media (max-width: 768px) {
        .profile-box {
            padding: 20px;
        }

        h1 {
            font-size: 1.5rem;
        }

        label {
            font-size: 13px;
        }

        input {
            font-size: 13px;
            padding: 10px;
        }

        .btn {
            font-size: 13px;
            padding: 10px;
        }
    }

    @media (max-width: 480px) {
        h1 {
            font-size: 1.3rem;
        }

        h1::after {
            width: 40px;
        }

        input {
            font-size: 12px;
            padding: 8px;
        }

        label {
            font-size: 12px;
        }

        .btn {
            font-size: 12px;
            padding: 10px;
        }
    }
</style>

<div class="container">
    <%- include("../layouts/user/sidebar.ejs") %>

    <div class="profile-container">
        <div class="profile-box">
            <h1>Reset Password</h1>
            <form action="/reset-password" method="POST" id="resetPasswordForm" onsubmit="return validateForm()">
                <div class="input-group">
                    <label for="current-password">Current Password</label>
                    <input type="password" id="current-password" placeholder="Enter current password" required>
                    <i class="password-toggle" onclick="togglePassword('current-password')">üëÅÔ∏è</i>
                </div>
                <div class="input-group">
                    <label for="new-password">New Password</label>
                    <input type="password" id="new-password" placeholder="Enter new password" required>
                    <i class="password-toggle" onclick="togglePassword('new-password')">üëÅÔ∏è</i>
                </div>
                <div class="input-group">
                    <label for="confirm-password">Confirm Password</label>
                    <input type="password" id="confirm-password" placeholder="Re-enter new password" required>
                    <i class="password-toggle" onclick="togglePassword('confirm-password')">üëÅÔ∏è</i>
                </div>
                <button type="submit" class="btn btn-primary">RESET PASSWORD</button>
            </form>
        </div>
    </div>
</div>

<script>
function togglePassword(id) {
    const field = document.getElementById(id);
    field.type = field.type === "password" ? "text" : "password";
}

function validateForm() {
    const currentPassword = document.getElementById('current-password').value;
    const newPassword = document.getElementById('new-password').value;
    const confirmPassword = document.getElementById('confirm-password').value;

   if (!currentPassword || !newPassword || !confirmPassword) {
    Swal.fire({
        icon: 'warning',
        title: 'Missing Fields',
        text: 'Please fill in all the fields to continue.',
    });
    return false;
}

if (newPassword !== confirmPassword) {
    Swal.fire({
        icon: 'error',
        title: 'Passwords Do Not Match',
        text: 'Make sure your new password and confirm password are the same.',
    });
    return false;
}

if (newPassword.length < 8) {
    Swal.fire({
        icon: 'info',
        title: 'Weak Password',
        text: 'Your new password must be at least 8 characters long.',
    });
    return false;
}

if (currentPassword === newPassword && currentPassword === confirmPassword) {
    Swal.fire({
        icon: 'error',
        title: 'Invalid Password Change',
        text: 'Your new password must be different from your current password.',
    });
    return false;
}
return true
}

document.getElementById('resetPasswordForm').addEventListener('submit', function(e) {
    e.preventDefault();
    if (validateForm()) {
        fetch('/password-reset', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                currentPassword: document.getElementById('current-password').value,
                newPassword: document.getElementById('new-password').value,
            })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                Swal.fire({ icon: 'success', title: 'Password reset successfully!' })
                .then(() => window.location.href = '/userProfile');
            } else {
                Swal.fire({ icon: 'error', title: 'Failed!', text: data.message || 'Something went wrong.' });
            }
        })
        .catch(() => {
            Swal.fire({ icon: 'error', title: 'Error!', text: 'Unexpected error occurred.' });
        });
    }
});
</script>

