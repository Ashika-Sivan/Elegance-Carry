<%- include("../layouts/user/header.ejs") %>
<%- include("../layouts/user/sidebar.ejs")%>

<div style="margin-bottom: 10rem;">
  <!-- Edit Profile Container -->
  <div class="profile-container">
    <div class="profile-box">
      <h1>Edit Profile</h1>
      <form action="/edit-profile" id="editProfileForm" method="POST">
        <ul class="profile-info">
          <li>
            <label>Full Name:</label>
            <input type="text" name="fullName" id="fullName" value="<%= user.name %>" required>
          </li>
          <li>
            <label>Phone:</label>
            <input type="text" name="phone" id="phone" value="<%= user.phone %>" required>
          </li>
        </ul>
        <div class="save-changes">
          <button type="submit">Save Changes</button>
          <button type="button" onclick="window.location.href='/userProfile';">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("../layouts/user/footer.ejs") %>

<style>
  /* Existing styles from your profile page */
  .profile-container {
    margin-left: 270px;
    padding: 20px;
  }

  .profile-box {
    background-color: #fff;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    margin: auto;
  }

  /* Additional styles for the edit form */
  .profile-info {
    list-style: none;
    padding: 0;
  }

  .profile-info li {
    margin-bottom: 20px;
  }

  .profile-info label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #555;
  }

  .profile-info input {
    width: 100%;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }

  .profile-info input:focus {
    outline: none;
    border-color: #0044cc;
    box-shadow: 0 0 5px rgba(0, 68, 204, 0.2);
  }

  .save-changes {
    text-align: center;
    margin-top: 20px;
  }

  .save-changes button {
    background-color: #0044cc;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    margin: 0 10px;
    font-size: 16px;
  }

  .save-changes button[type="button"] {
    background-color: #666;
  }

  .save-changes button:hover {
    opacity: 0.9;
  }

  @media screen and (max-width: 768px) {
    .profile-container {
      margin-left: 220px;
    }
  }

  @media screen and (max-width: 480px) {
    .profile-container {
      margin-left: 120px;
    }
    
    .save-changes button {
      width: 100%;
      margin: 5px 0;
    }
  }
</style>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
  document.getElementById("editProfileForm").addEventListener("submit", async function (e) {
    e.preventDefault();

    if (!validateForm()) {
      return;
    }

    const data = {
      fullName: document.querySelector('input[name="fullName"]').value.trim(),
      phone: document.querySelector('input[name="phone"]').value.trim()
    };

    try {
      const response = await fetch("/edit-profile", {
        method: 'PUT',
        headers: {
          'content-type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        Swal.fire({
          icon: 'success',
          title: 'Updated',
          text: result.message,
          confirmButtonText: 'OK'
        }).then(() => {
          window.location.href = '/userProfile';
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: result.message,
          confirmButtonText: 'OK'
        });
      }
    } catch (error) {
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: "Something went wrong. Please try again.",
        confirmButtonText: 'OK'
      });
    }
  });

  function validateForm() {
    let isValid = true;

    const nameVal = document.getElementById("fullName").value.trim();
    const phoneVal = document.getElementById("phone").value.trim();

    const namePattern = /^[A-Za-z\s]{2,50}$/;
    const phonePattern = /^[6-9]\d{9}$/;

    if (!namePattern.test(nameVal)) {
      Swal.fire({
        icon: 'error',
        title: 'Invalid Name',
        text: 'Name must contain only letters and spaces (2–50 characters).'
      });
      isValid = false;
    }

    if (!phonePattern.test(phoneVal)) {
      Swal.fire({
        icon: 'error',
        title: 'Invalid Phone',
        text: 'Please enter a valid 10-digit phone number starting with 6–9.'
      });
      isValid = false;
    }

    return isValid;
  }
</script>
